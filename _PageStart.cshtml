﻿@{
    var path = Request.PhysicalPath.Trim('\\');
    if (path == Request.PhysicalApplicationPath.Trim('\\')) {
        Page.DocumentTitle = "Quartz.NET Documentation";
        Page.Title = Page.DocumentTitle;
        Page.EditUrl = "https://github.com/quartz-net/documentation/blob/master/Index.markdown";
    }
    else {
        var docName = Path.GetFileNameWithoutExtension(path);
        Page.DocumentTitle = docName.Replace('-', ' ');
        Page.Title = Page.DocumentTitle + " - Quartz.NET Documentation";
        Page.EditUrl = "https://github.com/quartz-net/documentation/blob/master/Documentation/" + docName + ".markdown";
    }
    Layout = "_SiteLayout.cshtml";
}